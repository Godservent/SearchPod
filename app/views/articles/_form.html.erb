      </tr>

      <tr>
        <th><%= form.label :body ,class:"lable"%></th>
        <td><%= form.text_area :body ,class:"field"%></td>
      </tr>

      <tr>
        <th><%= form.label :user_id ,class:"lable"%></th>
        <td><%= form.text_field :user_id ,class:"field"%></td>
      </tr>
    </table>
      <div class="actions">
        <%= form.submit %>
      </div>
  </div>
<% end %>

