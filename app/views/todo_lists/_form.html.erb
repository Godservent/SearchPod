<%= form_with(model: todo_list) do |form| %>
  <% if todo_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2>

      <ul>
        <% todo_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form_container">
  <table>
  <div>
    <tr>
      <th><%= form.label :date ,class:"lable"%></th>
      <td><%= form.text_field :date ,class:"field"%></td>
    </tr>
  </div>

  <div>
    <tr>
      <th><%= form.label :item ,class:"lable"%></th>
      <td><%= form.text_area :item ,class:"field"%></td>
    </tr>
  </div>

  <div>
    <tr>
      <th><%= form.label :status ,class:"lable"%></th>
      <td><%= form.check_box :status ,class:"field"%>*Status means Completed or Not</td>
    </tr>
  </div>

  <div>
    <tr>
      <th><%= form.label :userid ,class:"lable"%></th>
      <th><%= form.number_field :userid ,class:"field"%></td>
    </tr>
  </div>

  <div>
    <tr>
      <th><%= form.label :user_id ,class:"lable"%></th>
      <td><%= form.text_field :user_id ,class:"field"%></td>
    </tr>
  </div>


  </table>
  <div class="actions">
    <%= form.submit %>
  </div>

  </div>
<% end %>

<style>
.body{background-color:rgb(107, 112, 92);}
table{
  table-layout:center;
  text-align:left;
}
.form_container{
  position:absolute;
  left:32%;
}
.lable{color:#FFFFFF;text-align:right;}
th,td{padding:10px;}
</style>
